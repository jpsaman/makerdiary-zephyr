if BOARD_NRF52832_MDK

config BOARD
	default nrf52832_mdk

if GPIO_NRF5

config GPIO_NRF5_P0
	default y

endif # GPIO_NRF5

if UART_NRF5

config UART_NRF5_GPIO_TX_PIN
	default 20

config UART_NRF5_GPIO_RX_PIN
	default 19

config UART_NRF5_GPIO_RTS_PIN
	default 5

config UART_NRF5_GPIO_CTS_PIN
	default 7

endif # UART_NRF5

endif # BOARD_NRF52832_MDK
